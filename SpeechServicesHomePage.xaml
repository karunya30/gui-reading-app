<Page x:Class="WpfFunReader.SpeechServicesHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFunReader"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="SpeechServicesHomePage">

    <Grid>
        <Label Content="Speech Services" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" FontSize="32"/>
        <Button x:Name="AskKITA" Content="AskKITA" HorizontalAlignment="Left" Margin="60,122,0,0" VerticalAlignment="Top" FontSize="24" Click="AskKITA_Click"/>
        <Button x:Name="ReadThisForMe" Content="ReadThisForMe" HorizontalAlignment="Left" Margin="60,200,0,0" VerticalAlignment="Top" FontSize="24"/>
        <CheckBox x:Name="ReadThisForMeCheckBox" HorizontalAlignment="Left" Margin="300,210,0,0" VerticalAlignment="Top" Checked="ReadThisForMeCheckBox_Checked"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="60,329,0,0" VerticalAlignment="Top" Click="BackButton_Click"/>

    </Grid>
</Page>
