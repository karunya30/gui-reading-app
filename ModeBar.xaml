<Window x:Class="WpfFunReader.ModeBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFunReader"
        mc:Ignorable="d"
        Title="ModeBar" Height="100" Width="300">
    <Grid>
        <Button x:Name="btn_start" Content="Start" HorizontalAlignment="Left" Margin="25,30,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btn_pause" Content="Pause" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Stop" Content="Stop" HorizontalAlignment="Left" Margin="230,30,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
